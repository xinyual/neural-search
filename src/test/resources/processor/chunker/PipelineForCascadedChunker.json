{
  "description": "An example cascaded pipeline with fixed token length algorithm after chunking algorithm",
  "processors" : [
    {
      "chunking": {
        "field_map": {
          "body": "body_chunk_intermediate"
        },
        "algorithm": {
          "delimiter": {
            "delimiter": "."
          }
        }
      }
    },
    {
      "chunking": {
        "field_map": {
          "body_chunk_intermediate": "body_chunk"
        },
        "algorithm": {
          "fix_length": {
            "token_limit": 10
          }
        }
      }
    }
  ]
}
